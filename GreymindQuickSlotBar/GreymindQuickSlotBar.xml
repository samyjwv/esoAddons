<GuiXml>
 <Controls>
  <TopLevelControl name="GreymindQuickSlotBarUI" mouseEnabled="true" movable="true" clampedToScreen="true">

   <Dimensions x="320" y="40" />

   <Anchor point="TOPLEFT" offsetX="10" offsetY="10" />

   <OnMoveStart>   GreymindQuickSlotBar.OnMoveStart();   </OnMoveStart>
   <OnMoveStop>    GreymindQuickSlotBar.OnMoveStop();    </OnMoveStop>
   <OnResizeStart> GreymindQuickSlotBar.OnResizeStart(); </OnResizeStart>
   <OnResizeStop>  GreymindQuickSlotBar.OnResizeStop()   </OnResizeStop>
   <OnUpdate>      GreymindQuickSlotBar.Update();        </OnUpdate>

   <Controls>
    <Backdrop name="$(parent)Backdrop" edgeColor="444444" centerColor="000000" alpha="0.5" >
     <AnchorFill />
     <Edge edgeSize="1" />
    </Backdrop>
   </Controls>

  </TopLevelControl>
 </Controls>
</GuiXml>
