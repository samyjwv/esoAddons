					<Dimensions x="64" y="64" />
					<Anchor point="CENTER" />
				</Cooldown>
				<Cooldown name="$(parent)_Cooldown2" inherits="ZO_DefaultCooldown" layer="0" level="4" hidden="false" alpha="1" fillColor="FF0000" textureFile="EsoUI/Art/hud/radialmenu_bg_unselected.dds" blendMode="ADD">
					<Dimensions x="256" y="256" />
					<Anchor point="CENTER" />
				</Cooldown>
				<Cooldown name="$(parent)_Cooldown3" inherits="ZO_DefaultCooldown" layer="0" level="4" hidden="false" alpha="1" fillColor="FF0000" textureFile="EsoUI/Art/hud/radialmenu_bg_unselected.dds" blendMode="ADD">
					<Dimensions x="256" y="256" />
					<Anchor point="CENTER" />
				</Cooldown>
				<Cooldown name="$(parent)_Cooldown4" inherits="ZO_DefaultCooldown" layer="0" level="4" hidden="false" alpha="1" fillColor="FF0000" textureFile="EsoUI/Art/hud/radialmenu_bg_unselected.dds" blendMode="ADD">
					<Dimensions x="256" y="256" />
					<Anchor point="CENTER" />
				</Cooldown>
		</TopLevelControl> -->
	</Controls>	
</GuiXml>
