<GuiXml>
  <Controls>
    <Control name="VotansQuestRow" virtual="true" mouseEnabled="true">
      <Dimensions x="200" y="25" />
      <Controls>
        <Texture name="$(parent)Highlight" alpha="0" excludeFromResizeToFitExtents="true">
          <AnchorFill />
          <TextureCoords left="0" right="1" top="0" bottom=".625" />
        </Texture>

        <Texture name="$(parent)AssistedIcon" textureFile="EsoUI/Art/Quest/questJournal_trackedQuest_icon.dds" hidden="true">
          <Dimensions x="24" y="24"/>
          <Anchor point="TOPLEFT" offsetX="8"/>
          <TextureCoords top="0.125" bottom="0.875" left="0.125" right="0.875"/>
        </Texture>
        <Label name="$(parent)Name" font="ZoFontWinH4" wrapMode="ELLIPSIS" verticalAlignment="CENTER" horizontalAlignment="LEFT" excludeFromResizeToFitExtents="true">
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="38" offsetY="2"/>
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="-5" offsetY="-2"/>
        </Label>
        <Label name="$(parent)Level" font="esoui/common/fonts/univers67.otf|14" wrapMode="ELLIPSIS" verticalAlignment="BOTTOM" excludeFromResizeToFitExtents="true" alpha="0.5">
          <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-19" offsetY="2"/>
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="-19" offsetY="-2"/>
        </Label>
      </Controls>
    </Control>
    <Control name="VotansQuestHeaderRow" virtual="true" mouseEnabled="false">
      <Dimensions x="300" y="50" />
      <Controls>
        <Texture name="$(parent)Texture" level="3" excludeFromResizeToFitExtents="true">
          <Anchor point="TOPLEFT" offsetX="0" offsetY="0" />
          <Dimensions x="32" y="64"/>
        </Texture>
        <Label name="$(parent)Location" font="ZoFontWinH3" wrapMode="ELLIPSIS" verticalAlignment="BOTTOM" horizontalAlignment="LEFT" excludeFromResizeToFitExtents="true">
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="38" offsetY="0"/>
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="-5" offsetY="0"/>
        </Label>
      </Controls>
    </Control>
    <Control name="VotansGamepadQuestRow" virtual="true" inherits="ZO_GamepadSubMenuEntryTemplateWithStatusLowercase42">
      <Controls>
        <Label name="$(parent)SubLabel1" inherits="ZO_GamepadMenuEntryStackCountTemplate" excludeFromResizeToFitExtents="true" alpha="0.5" />
      </Controls>
    </Control>
  </Controls>
</GuiXml>
