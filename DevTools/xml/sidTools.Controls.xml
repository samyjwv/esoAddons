        <TopLevelControl name="sidToolBar" clampedToScreen="true" hidden="true">
            <Anchor point="TOPLEFT" />
            <Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" offsetY="30" />

            <Controls>
                <Backdrop name="$(parent)Bg" inherits="ZO_DefaultBackdrop">
                    <Anchor point="TOPLEFT" offsetX="-8" offsetY="-8" />
